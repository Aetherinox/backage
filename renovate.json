{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":preserveSemverRanges"
  ],
  "timezone": "Etc/UTC",
  "includeForks": true,
  "forkProcessing": "enabled",
  "baseBranches": ["master"],
  "prCreation": "immediate",
  "rebaseWhen": "conflicted",
  "rebaseLabel": "AC ‚Ä∫ Needs Rebase",
  "gitAuthor": "BinaryServ <161414668+BinaryServ@users.noreply.github.com>",
  "updatePinnedDependencies": false,
  "dependencyDashboard": true,
  "dependencyDashboardTitle": "üìÅ Dependency Dashboard",
  "dependencyDashboardLabels": ["üì∞ Progress Report"],
  "vulnerabilityAlerts": {
    "enabled": true,
    "labels": ["Type ‚ó¶ Vulnerability"]
  },
  "labels": [
    "Type ‚ó¶ Dependency"
  ],
  "major": {
    "automerge": false
  },
  "lockFileMaintenance": {
    "enabled": true,
    "automerge": true
  },
  "packageRules": [
    {
      "matchManagers": [
        "nodenv",
        "npm",
        "nvm"
      ],
      "addLabels": [
        "Type ‚ó¶ Dependency"
      ],
      "rangeStrategy": "auto"
    },
    {
      "matchManagers": [
        "nodenv",
        "npm",
        "nvm"
      ],
      "matchUpdateTypes": [
        "minor",
        "patch"
      ],
      "addLabels": [
        "Type ‚ó¶ Dependency"
      ],
      "automerge": false
    },
    {
      "matchManagers": [
        "github-actions"
      ],
      "addLabels": [
        "Type ‚ó¶ Git Action"
      ],
      "rangeStrategy": "auto"
    },
    {
      "matchManagers": [
        "github-actions"
      ],
      "addLabels": [
        "Type ‚ó¶ Git Action"
      ],
      "matchUpdateTypes": [
        "minor",
        "patch"
      ],
      "automerge": false
    }
  ]
}
